{
  "name": "runcmf/runcli",
  "description": "RunCli - Command Line Interface. [migrate, seed, generate migrations and seeds from existing database, create database, generate resources and much more :)]",
  "license": "Apache 2",
  "type": "library",
  "keywords": [
    "RunCMF",
    "Slim3",
    "Slim 3",
    "Eloquent ORM",
    "Cli",
    "database",
    "migration",
    "generate migrations"
  ],
  "authors": [
    {
      "name": "Vladimir",
      "email": "1f7.wizard@gmail.com",
      "homepage": "http://runcmf.ru"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "symfony/console": "3.1.*",
    "illuminate/database": "~5.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5",
    "phpunit/phpunit": "^5.7",
    "tracy/tracy": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "RunCli\\": "src/RunCli"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@phpunit"
    ],
    "phpunit": "php vendor/bin/phpunit"
  }
}
